package newproject;

public class Practise {
    // Methods to calculate sum and difference
    int sum(int x, int y) {
        return x + y;
    }

    int subtract(int x, int y) {
        return x - y;
    }

    public static void main(String args[]) {
        // You need to create an instance of the class to call non-static methods
        Practise obj1 = new Practise();

        int x = 20;
        int y = 10;

        // Call the methods on the instance
        System.out.println("The sum of the two numbers is " + obj1.sum(x, y));
        System.out.println("The difference of the two numbers is " + obj1.subtract(x, y));
    }
}
